@model Scribble.Web.Models.Post

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>@Model.Title</title>
</head>
<body>
    <h1>@Model.UrlTitle</h1>

    @Model.Body

    <h2>Tags</h2>

    <ul>
        @foreach (var tag in Model.Tags)
        {
            <li>@tag.Name</li>
        }
    </ul>

    <h2>Categories</h2>
    
    <ul>
        @foreach (var category in Model.Categories)
        {
            <li>@category.Name</li>
        }
    </ul>
</body>
</html>