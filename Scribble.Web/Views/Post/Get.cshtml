@using Scribble.Web.Helpers
@model Scribble.Web.Models.Post

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>@Model.Title</title>
</head>
<body>
    <h1>@Model.UrlTitle</h1>

    @Model.Body

    <h2>Tags</h2>

    <ul>
        @foreach (var tag in Model.Tags)
        {
            <li>@tag.Name</li>
        }
    </ul>

    <h2>Categories</h2>

    <ul>
        @foreach (var category in Model.Categories)
        {
            <li>@category.Name</li>
        }
    </ul>

    <h2>Comments</h2>

    @foreach (var comment in Model.Comments)
    {
        <div>
            @using (Html.WrapWithLink(comment.Website))
            {
                <h3>@comment.Name</h3>
            }
            <p>@comment.Body</p>
        </div>
    }
</body>
</html>
